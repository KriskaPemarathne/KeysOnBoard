@model IEnumerable< Core.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-bind="click :$root.newProduct" data-target="#productModal">Add New  Product</button><br /><br />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
        <th></th>
    </tr>

    <tbody data-bind="foreach:  Product">
        <tr id="ProductTable">
            <td><span data-bind="text:  ProductName"></span></td>
            <td><span data-bind="text:  ProductPrice"></span></td>
            <td><a href="#" data-bind="click: $root.EditModal.bind($root)">Edit</a> | <a href="#" data-bind="click: $root.Delete.bind($root)">Delete</a></td>
        </tr>
    </tbody>

</table>

<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog" data-bind="with : SelectedProduct">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="productModalLabel">Add Product</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="editor-label">
                            Product Name
                        </div>

                       
                        <div class="editor-label" data-bind="css: { error: ProductName.hasError }">
                            <input type="text" id='txtName' data-bind="value: ProductName" />
                            <span class="field-validation-valid text-danger" data-bind='visible: ProductName.Errors, text: ProductName.message'> </span>
                        </div>
                        <div class="editor-label">
                            Product Price
                        </div>
                        <div class="editor-label">
                            <input type="number" id="txtProductPrice"  data-bind="value: ProductPrice"/>
                            <span id="Err_ProductPrice" class="field-validation-valid text-danger" ata-bind='visible: ProducPrice.Errors, text: ProductPrice.message'></span>

                        </div>
                        <div class="editor-label" id="ProductId">
                            <label id="lblProductId" style="visibility:hidden"></label>


                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" data-bind="click: $parent.Add" >Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" data-bind="click: $parent.Update" style="display:none;">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
@Content.Script("knockout.validation.js", Url)
    @Content.Script("productKnockOut.js", Url)

}







