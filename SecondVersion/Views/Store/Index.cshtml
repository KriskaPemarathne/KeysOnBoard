@model IEnumerable<Core.Models.Store>


<p>
    <span></span>
</p>
<p>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#StoreModal" onclick="clearTextBox()">Add New Store</button><br /><br />
</p>

<br /><br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="DataList"></tbody>

</table>
<div class="modal fade" id="StoreModal" tabindex="-1" role="dialog" aria-labelledby="StoreModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="StoreModalLabel">Add Store</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="editor-label">
                            Store Name
                        </div>

                        <div class="editor-label">
                            <input type="text" id="txtStoreName" /><label id="lblStoreId" style="visibility:hidden"></label>
                            <span id="Err_StoreName" class="field-validation-valid text-danger" data-valmsg-for="StoreName" data-valmsg-replace="true"></span>

                        </div>

                        <div class="editor-label">
                           Store Address
                        </div>
                        <div class="editor-label">
                            <input type="text" id="txtStoreAddress" />
                            <span id="Err_StoreAddress" class="field-validation-valid text-danger" data-valmsg-for="StoreAddress" data-valmsg-replace="true"></span>

                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="StoreviewModal" tabindex="-1" role="dialog" aria-labelledby="StoreModalViewLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="StoreModalLabel">Store Details</h4>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    <dt>
                        Store Id :
                    </dt>

                    <dd>
                        <label id="lblViewStoreId"></label>

                    </dd>

                    <dt>
                        Store Name :
                    </dt>

                    <dd>
                        <label id="lblViewStoreName"></label>

                    </dd>

                    <dt>
                        Store Address :
                    </dt>

                    <dd>
                        <label id="lblViewStoreAddress"></label>

                    </dd>

                </dl>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>









@section Scripts {
    @Content.Script("store.js", Url)

}
