@model IEnumerable<Core.Models.ProductSoldDetails>

<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#SalesModal" onclick="clearTextBox()">Add New Sale</button><br /><br />
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StoreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoldDate)
        </th>
        <th></th>
    </tr>

    </thead>
    <tbody class="DataList"></tbody>

</table>
<div class="modal fade" id="SalesModal"  tabindex="-1" role="dialog" aria-labelledby="SalesModalLabel" aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" id="SalesModalLabel">Add New Sale</h4>
        </div>
        <div class="modal-body">
            <form>
                <div class="form-group">
                    <div class="editor-label">
                        Customer
                    </div>
                    <div class="editor-label">                        
                        <select data-val="true"  id="CustomerList" name="CustomerId">
                                                     
                        </select>  
                        <span id="Err_CustomerId" class="field-validation-valid text-danger" data-valmsg-for="CustomerList" data-valmsg-replace="true"></span>
                    </div>
                    <div class="editor-label">
                        Store
                    </div>
                    <div class="editor-label">                       
                        <select data-val="true" id="StoreList" name="StoreId">
                           
                        </select>
                        <span id="Err_StoreId" class="field-validation-valid text-danger" data-valmsg-for="StoreList" data-valmsg-replace="true"></span>
                    </div>
                    <div class="editor-label">
                        Product
                    </div>
                    <div class="editor-label">                        
                        <select data-val="true" id="ProductList" name="ProductId">
                           
                        </select>
                        <span id="Err_ProductId" class="field-validation-valid text-danger" data-valmsg-for="ProductList" data-valmsg-replace="true"></span>
                    </div>
                    <div class="editor-label">
                        Date
                    </div>

                    <div class="editor-label">
                        <input type="date" id="txtSoldDate" value="" />
                        <span id="Err_SoldDate" class="field-validation-valid text-danger" data-valmsg-for="SoldDate" data-valmsg-replace="true"></span>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
            <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
            <button type="button" class="btn btn-default" onclick="clearTextBox()" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
</div>


<div class="modal fade" id="SalesViewModal" tabindex="-1" role="dialog" aria-labelledby="SalesModalViewLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="SalesModalViewLabel">Sales Details</h4>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    <dt>
                        Sales Product Id :
                    </dt>

                    <dd>
                        <label id="lblViewProductSoldId"></label>

                    </dd>
                    <dt>
                        Customer Name :
                    </dt>

                    <dd>
                        <label id="lblViewCustomerName"></label>

                    </dd>
                    <dt>
                        Product Name :
                    </dt>

                    <dd>
                        <label id="lblViewProductName"></label>

                    </dd>

                    <dt>
                        Store Name :
                    </dt>

                    <dd>
                        <label id="lblViewStoreName"></label>

                    </dd>

                    <dt>
                        Date of Sale :
                    </dt>

                    <dd>
                        <label id="lblViewSoldDate"></label>

                    </dd>

                </dl>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @Content.Script("productSold.js", Url)


}
